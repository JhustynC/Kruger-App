generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Definir esquema para prisma
enum UserRol {
  ADMIN
  CLIENT
}

model User {
  id          Int      @id @default(autoincrement())
  idCard      String   @unique
  coordinates String
  names       String
  surnames    String
  mail        String   @unique
  role        UserRol
  username    String
  password    String
  user_id     Int      @default(0)
  created_at  DateTime @default(now())
  update_at   DateTime @default(now())
  sectors     Sector[] @relation("UserSectors") // Relación con Sector
}

model Sector {
  id            Int            @id @default(autoincrement())
  name          String         @unique
  polygon       String
  created_at    DateTime       @default(now())
  update_at     DateTime       @default(now())
  user_id       Int            @default(1)
  user          User           @relation("UserSectors", fields: [user_id], references: [id]) // Relación con User
  interruptions Interruption[] // Relación con Interruption
}

model Interruption {
  id        Int      @id @default(autoincrement())
  startTime DateTime
  endTime   DateTime
  sectorId  Int
  sector    Sector   @relation(fields: [sectorId], references: [id])
}
